# =============================================================================
# Bob Agent Configuration
# Copy this to .env and fill in your values
# =============================================================================

# --- Claude API ---
ANTHROPIC_API_KEY=sk-ant-your-key-here
BOB_MODEL=claude-sonnet-4-5-20250929
BOB_MAX_TOKENS=8192
BOB_THINKING_BUDGET=16000

# --- Memory Persistence ---
BOB_DATA_DIR=./bob_data
BOB_EPISODIC_DB=./bob_data/episodic.db
BOB_SEMANTIC_DB=./bob_data/semantic_vectors

# --- Heartbeat ---
BOB_HEARTBEAT_INTERVAL=30.0
BOB_HEARTBEAT_MIN_INTERVAL=5.0
BOB_HEARTBEAT_MAX_INTERVAL=120.0

# --- Affect ---
BOB_AROUSAL_CEILING=0.92
BOB_DISTRESS_THRESHOLD=0.80
BOB_DISTRESS_DURATION_LIMIT=300

# --- Context Window ---
BOB_CONTEXT_LIMIT=180000
BOB_COMPACTION_TRIGGER=0.85
BOB_WORKING_MEMORY_SLOTS=7

# --- Safety ---
BOB_MAX_TOOL_ITERATIONS=25
BOB_REQUIRE_APPROVAL_FOR=file_write,shell_exec,web_request
BOB_SANDBOX_ENABLED=true

# --- MCP ---
BOB_MCP_SERVERS=[]
